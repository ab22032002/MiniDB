{
  "name": "MiniStoreDB Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "postCreateCommand": "cmake -S . -B build && cmake --build build",
  "extensions": [
    "ms-vscode.cpptools",
    "ms-vscode.cmake-tools"
  ],
  "forwardPorts": [],
  "remoteUser": "vscode"
}
